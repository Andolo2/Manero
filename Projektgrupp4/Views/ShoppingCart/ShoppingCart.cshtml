@model ShoppingCartViewModel;
@inject ProductEntity product;
<section class="shoppingCart">
    <div class="container">
        <div class="navigateBack">
            <a href=""><i class="fa-solid fa-less-than"></i></a>
            <p class="test">Order</p>
            <i class="fa-light fa-bag-shopping"></i>
        </div>
        <div class="productItem">
            <div class="productImage">
                <img class="image" src="/images/ProductImage.svg" alt="">
                <img class="sale" src="/images/Sale.svg" alt="">
            </div>
            <div class="productInfo">
                <p class="productTitle">Shoulder bag</p>
                <div class="price">
                    <p class="normalPrice">@product.ProductPrice</p>
                    <p class="discountPrice">@product.ProductOfferPrice</p>
                </div>
                <p class="size">Size: -</p>
                <p class="color">Color: Black</p>
            </div>
            <div class="productAmount">
                <button class="increment"><i class="fa-solid fa-plus"></i></button>
                <p class="amount">1</p>
                <button class="decrement"><i class="fa-solid fa-minus"></i></button>
            </div>
        </div>
        <div class="promocode">
            <p>Promocode applied</p><i class="fa-solid fa-check"></i>
        </div>
        <div class="receipt">
            <div class="subtotal">
                <p>Subtotal</p>
                <p class="totalAmount">$45.98</p>
            </div>
            <div class="discount">
                <p>Discount</p>
                <p class="totalDiscount"> -4.29</p>
            </div>
            <div class="delivery">
                <p>Delivery</p>
                <p class="shipmentCost">Free</p>
            </div>
            <div class="dividingBorder"></div>
            <div class="totalOrderCost">
                <p>Total</p>
                <p class="totalCost">$41.69</p>
            </div>
        </div>
        <button class="button335W">PROCEED TO CHECKOUT</button>
    </div>
</section>